<Window x:Class="Nyx.Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nyx.Gui"
        mc:Ignorable="d"
        Title="Nyx v0.0.1"
        WindowState="Maximized" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="About"/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Dungeons">
                <MenuItem Header="New savefile"/>
                <MenuItem Header="New character"/>
                <MenuItem Header="Open savefile"/>
                <MenuItem Header="Open character"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
